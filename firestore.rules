// FILE: firestore.rules
// Firestore Security Rules for SuNote App
// Deploy with: firebase deploy --only firestore:rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Notes collection rules
    match /notes/{noteId} {
      // Anyone authenticated can read notes (marketplace)
      allow read: if isAuthenticated();
      
      // Only authenticated users can create notes
      // The createdBy field must match the authenticated user's ID
      allow create: if isAuthenticated() 
                    && request.resource.data.createdBy == request.auth.uid;
      
      // Owner can update their own notes fully
      // Any authenticated user can increment totalSells (for purchases)
      allow update: if isAuthenticated() 
                    && (resource.data.createdBy == request.auth.uid
                        || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['totalSells'])
                            && request.resource.data.totalSells == resource.data.totalSells + 1));
      
      // Only the owner can delete their own notes
      allow delete: if isAuthenticated() 
                    && resource.data.createdBy == request.auth.uid;
    }
    
    // Purchases collection rules
    match /purchases/{purchaseId} {
      // Users can only read their own purchases
      allow read: if isAuthenticated() 
                  && resource.data.userId == request.auth.uid;
      
      // Users can create purchases for themselves
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid;
      
      // Purchases cannot be updated (immutable record)
      allow update: if false;
      
      // Users can delete their own purchase records
      allow delete: if isAuthenticated() 
                    && resource.data.userId == request.auth.uid;
    }
    
    // Users collection (if you add user profiles later)
    match /users/{userId} {
      // Users can only read and write their own profile
      allow read, write: if isOwner(userId);
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
